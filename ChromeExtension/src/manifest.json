{
  "manifest_version": 2,

  "name": "Knowledge Base",
  "description": "This extension allow us to save and link into our knowledge base with a tag",
  "version": "0.3",

   "options_ui": {
    // Required.
    "page": "options.html",
    // Recommended.
    "chrome_style": true
  },

  "browser_action": {
    "default_icon": "icon.png",
    "default_title":  "Knowledge Base",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "storage",
    "https://ajax.googleapis.com/",
    "http://*/"
  ]
}