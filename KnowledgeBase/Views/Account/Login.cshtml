@using KnowledgeBase.Models
@model LoginViewModel
@{
    Layout = "~/Views/Shared/_Layout_Blank.cshtml";
    ViewBag.Title = "Login";
}

<div class="login-container">
    <div class="row">
        <div class="col-md-12">
            <div class="text-center m-b-md">
                <h3><span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span> Log in to MyKnowledge</h3>
                <small>It is completely free!</small>
            </div>
            <div class="hpanel">
                <div class="panel-body">
                    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { id = "loginForm", role = "form" })) {
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            @Html.LabelFor(m => m.Email, new { @class = "control-label" })
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control input-lg", title = "Please enter your email", required = "", placeholder = "example@gmail.com",
                                                                 tabindex = "1", autocorrect = "off", spellcheck = "false", autocapitalize = "off", autofocus = "autofocus" })                                                        
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.Password, new { @class = "control-label" })
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control input-lg", title = "Please enter your password", required = "", placeholder = "*********", tabindex = "2" })                                                        
                        </div>
                        <div class="checkbox">    
                            <div class="icheckbox">
                                @Html.CheckBoxFor(m => m.RememberMe, new { @checked = "", @class = "i-checks" })
                            </div>                            
                            Remember login
                            <p class="help-block small">(if this is a private computer)</p>
                        </div>                        
                        <input type="submit" value="Login" class="btn btn-success btn-block btn-lg" tabindex="3" />
                        @Html.ActionLink("Register", "Register", null, new { @class="btn btn-default btn-block btn-lg", tabindex="4" })
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 text-center">
            <strong>MyKnowledge</strong> - <small>Small app for store urls <br /> 2016 Copyright Jplindgren</small>
        </div>
    </div>
</div>
