        <script>window.jQuery || document.write('<script src="~/Scripts/vendor/jquery-1.11.2.min.js"><\/script>')</script>
        <script src="~/Scripts/vendor/bootstrap.min.js"></script>
        <script src="~/Scripts/vendor/radio.min.js"></script>
        <script src="~/Scripts/vendor/jquery.bootstrap-autohidingnavbar.js"></script>
        <script src="~/Scripts/vendor/shortcut.js"></script>
        <script src="~/Scripts/vendor/toastr.min.js"></script>

        <script src="~/Scripts/main.js"></script>
        <script src="~/Scripts/app/serializeObject.js"></script>
        <script src="~/Scripts/app/myShortcuts.js"></script>

        <script src="~/Scripts/app/application.js"></script>
        <script src="~/Scripts/app/article-list.js"></script>
        <script src="~/Scripts/app/search-input.js"></script>
        <script src="~/Scripts/app/tag-menu.js"></script>
        <script src="~/Scripts/app/create-article-popup.js"></script>

        @RenderSection("pagescripts", false)
        <script>
            // Only enable if the document has a long scroll bar
            // Note the window height + offset
            if (($(window).height() + 100) < $(document).height()) {
                $('#top-link-block').removeClass('hidden').affix({
                    // how far to scroll down before link "slides" into view
                    offset: { top: 100 }
                });
            }
        </script>
